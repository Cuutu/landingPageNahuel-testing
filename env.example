# Google Finance API Configuration
# No se requiere API key para Google Finance, pero se puede configurar rate limiting
GOOGLE_FINANCE_RATE_LIMIT=1000
GOOGLE_FINANCE_BATCH_SIZE=3
GOOGLE_FINANCE_DELAY_MS=1000

# Cron Jobs Configuration
CRON_SECRET_TOKEN=your_secret_token_for_cron_jobs

# Timezone Configuration
TZ=America/Montevideo

# Email SMTP Configuration
# Configuración del servidor SMTP para enviar emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Email del Administrador
# Este email recibirá todas las notificaciones del admin:
# - Nuevas reservas (entrenamientos/asesorías)
# - Nuevos mensajes de contacto
# - Nuevos suscriptores de alertas
# - Indicadores de TradingView
# - Invitaciones a eventos de Google Calendar
ADMIN_EMAIL=admin@example.com

# Emails adicionales del administrador (opcional)
# Lista de emails separados por comas para recibir notificaciones adicionales
# ADMIN_EMAILS=admin2@example.com,admin3@example.com

# Configuración del Remitente (Opcional)
# Nombre y dirección que aparecerán como remitente en los emails
# Si no se configuran, se usará SMTP_USER como remitente
# EMAIL_FROM_NAME=Nahuel Lozano Trading
# EMAIL_FROM_ADDRESS=noreply@lozanonahuel.com

# Google Calendar (Admin)
ADMIN_GOOGLE_ACCESS_TOKEN=your_access_token
ADMIN_GOOGLE_REFRESH_TOKEN=your_refresh_token
GOOGLE_CALENDAR_ID=admin@gmail.com

# MongoDB
MONGODB_URI=your_mongodb_connection_string

# NextAuth
# ✅ CRÍTICO: NEXTAUTH_URL debe ser HTTPS en producción (https://lozanonahuel.com)
# Sin www para evitar problemas con cookies en navegadores con tracking prevention
# En desarrollo: http://localhost:3000
# En producción: https://lozanonahuel.com
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# MercadoPago (Development)
MP_TEST_PUBLIC_KEY=your_test_public_key
MERCADOPAGO_ACCESS_TOKEN=your_test_access_token
MERCADOPAGO_WEBHOOK_SECRET=your_webhook_secret

# MercadoPago (Production)
MP_PUBLIC_KEY=your_production_public_key
MERCADOPAGO_ACCESS_TOKEN=your_production_access_token
MERCADOPAGO_WEBHOOK_SECRET=your_production_webhook_secret

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Mux
MUX_TOKEN_ID=your_mux_token_id
MUX_TOKEN_SECRET=your_mux_token_secret

# Permitir reservas superpuestas (solo testing / preview)
# true para permitir solapamientos de reservas de entrenamientos sin bloquear
ALLOW_TEST_OVERLAP=false

# Telegram Bot Configuration
# Token del bot obtenido de @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# Chat ID del canal de TraderCall (número negativo para canales)
TELEGRAM_CHANNEL_TRADERCALL=-1001234567890
# Chat ID del canal de SmartMoney (número negativo para canales)
TELEGRAM_CHANNEL_SMARTMONEY=-1001234567891
# Habilitar/deshabilitar el bot de Telegram
TELEGRAM_ENABLED=true